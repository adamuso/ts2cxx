{
    "compilerOptions": {
        "experimentalDecorators": true,
        "noLib": true,
        "strict": true,
        "outDir": "dist",
        "target": "ES2020",
        "module": "CommonJS",
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipLibCheck": false,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    }
}